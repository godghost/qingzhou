<?xml version="1.0" encoding="utf-8"?>
    
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical">

    <TextView android:id="@+android:id/title"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textSize="18sp"
        android:textColor="@color/preference_row_text_color"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/setting_item_margin"
        android:layout_marginBottom="@dimen/setting_item_margin"
        android:paddingLeft="@dimen/setting_item_padding"
        android:paddingRight="@dimen/setting_item_padding"/>  

    <TextView android:id="@+android:id/summary"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textSize="18sp"
        android:textColor="@color/preference_row_text_color"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/setting_item_margin"
        android:layout_marginBottom="@dimen/setting_item_margin"
        android:paddingLeft="@dimen/setting_item_padding"
        android:paddingRight="@dimen/setting_item_padding"/>

</RelativeLayout>